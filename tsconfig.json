{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": false, // ← ENABLE EMITTING
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler", // Optional: can change to "node" if issues
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true, // <-- emit .d.ts files
        "declarationDir": "./dist/types", // optional: output types here (or same as outDir)
        "emitDeclarationOnly": false,
        "jsx": "preserve",
        "rootDir": "./src",
        "outDir": "./dist",
        "incremental": true,
        "paths": {
            "@/*": [
                "./src/*"
            ] // ← Make sure this matches the actual src structure
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/**",
        "jest.config.js",
        "jest.setup.js"
    ]
}